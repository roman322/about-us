<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="f.rmoch.aboutus.MainActivity">



    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:paddingLeft="80dp"
        android:src="@drawable/fivenomic" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"


        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:background="#333"
            android:gravity="center"

            android:text="This is our first study project called AR Tourist. Our team bear name Fivenomic and include 5 persons.  "
            android:textColor="#fff" />

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="All Rights Reserved.2017 Team FIVENOMIC"

            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
